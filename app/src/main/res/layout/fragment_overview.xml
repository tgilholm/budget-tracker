<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OverviewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <!-- Create label to tell users what txtBudgetAmount is referring to -->
        <!-- TODO edit text colours -->
        <TextView
            android:id="@+id/txtBudgetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:text="@string/label_budget_remaining"
            android:textColor="@color/material_dynamic_neutral60"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Create TextView to display the currently remaining budget -->
        <TextView
            android:id="@+id/txtBudgetAmount"
            android:layout_width="167dp"
            android:layout_height="42dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="228dp"
            android:text="Â£527.01"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtBudgetLabel" />


        <!-- TODO put pie chart & categories in a horizontal view -->
        <!-- Display the pie chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBudgetAmount" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>