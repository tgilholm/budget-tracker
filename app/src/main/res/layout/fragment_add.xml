<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Create label to tell users to type in a number -->
        <!-- TODO edit text colours -->
        <!-- TODO refactor txtAddAmount to persist a £ sign and prompt user input -->
        <TextView
            android:id="@+id/txtAddAmountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:text="@string/label_add_transaction"
            android:textColor="@color/material_dynamic_neutral60"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <!-- Add a TextInputEditText to receive user input for the transaction amount -->
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:hint="£"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddAmountLabel">

        </com.google.android.material.textfield.TextInputEditText>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>